@{
  Layout = "_Layout";
}

@using TDLMigration.Models;
@model List<TDLMigration.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}

@foreach (Item item in @Model)
{
  <li>@Html.ActionLink($"{item.ItemDescription}", "Details", new { id = item.ItemId })</li>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Add new category", "Create", "Categories")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>